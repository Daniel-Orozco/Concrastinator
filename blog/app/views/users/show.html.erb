<div class="wrapper">
    <div class="box">
        <div class="row row-offcanvas row-offcanvas-left">
            <!-- sidebar Left -->
            <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar">
              	<ul class="nav">
                  <li><h1><%= @user.name %></h1></li>
              	</ul>
                  <br>
		              <ul class="nav">
                    <%=image_tag("user.png", :class => "img-responsive")%>
            		  </ul>
		              <br>
                  <ul class="nav hidden-xs " id="lg-menu">
                    <li class="active">
                      <h4>Tags</h4>
                      </li>
                      <section class="tag_form">
                        <%= render 'shared/tag_form' %>
                      </section> 
                    <li>
                      <h4>Priorities</h4>
                      <%#for do |p|%>
                      <%#end%> 
                    </li>
                    <li>
                     <section class="priority_form">
                        <%= render 'shared/priority_form' %>
                      </section>
                    </li>
                </ul>

              </ul>
              	<!-- tiny only nav-->
                <!--
              <ul class="nav visible-xs" id="xs-menu">
                  	<li><a href="#featured" class="text-center"><i class="glyphicon glyphicon-list-alt"></i></a></li>
                    <li><a href="#stories" class="text-center"><i class="glyphicon glyphicon-list"></i></a></li>
                  	<li><a href="#" class="text-center"><i class="glyphicon glyphicon-paperclip"></i></a></li>
                </ul>
              -->
            </div>
            <!-- /sidebar -->
          
            <!-- main right col -->

            <div class="column col-sm-9 col-xs-11" id="main">
                
                <!-- top nav -->
              	<div class="navbar navbar-blue navbar-static-top">  
                    <div class="navbar-header">
                      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle</span>
                        <span class="icon-bar"></span>
          				      <span class="icon-bar"></span>
          				      <span class="icon-bar"></span>
                      </button>
                      <a href="/" class="navbar-brand logo">C</a>
                  	</div>
                  	<nav class="collapse navbar-collapse" role="navigation">
                    <%= form_tag(@user, method: "get", :class => 'navbar-form navbar-left') do %>
                      <div class="input-group input-group-sm" style="max-width:360px;">
                        <%= text_field_tag(:q,"" ,class:'form-control', placeholder: 'Search a task...') %>
                        <div class="input-group-btn">
                          <%= submit_tag("",class:'btn btn-default' ) %>
                        </div>
                      </div>
                    <% end %>

                    <ul class="nav navbar-nav navbar-right">
                       <li>
                          <span class="btn btn-default navbar-btn">
                            <align="left"><%= link_to "Log out", logout_path, method: "delete" %>
                          </span>
                       </li> 
                    </ul>
                  	</nav>                    
                </div>
                <!-- /top nav -->
              
                <div class="padding">
                    <div class="full col-md-12">

                        <!-- content -->                      
                        <%# if logged_in? %>
                          <div class="row">
                              <%= render 'shared/task_form' %>
                          </div>
                        <%# end %>
                          <%= render 'shared/edit_task_form'%>
                        <div class="col-md-12">
                          <% if @user.tasks.any? %>
                            <h3>Tasks (<%= @tasksA.count %>)</h3>
                            <ol class="tasks">
                              <%= render @tasksA %>
                            </ol>
                            <br>
                            <%if @tasksP != nil %>
                              <ol class="tasks">
                                <%= render @tasksP %>
                              </ol>
                              <br>
                            <%end%>
                            <%= will_paginate @tasksA %>
                          <% end %>
                        </div>
                  </div>
              </div>

              <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar">
               
              </div>

              </div>
              </div>
              </div>
              </div>
              <%=render 'tasks/edit_task_modal'%>
      </div>
      <!-- MAIN -->

  </div>
</div>
</div>