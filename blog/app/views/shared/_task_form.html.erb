<%= form_for(Task.new) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.text_area :title, placeholder: "New task..." %>
    <%= f.text_area :content, placeholder: "Description..." %>
    <%= f.collection_select(:priority_id, Priority.all, :id, :title, :prompt => 'Priority...') %>
    <%= f.collection_select(:tag_id, Tag.all, :id, :title, :prompt => 'Tag...') %>
    <%= f.text_area :due_date, placeholder: "[2015-10-26 16:00:00]" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>